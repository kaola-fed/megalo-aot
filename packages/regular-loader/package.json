{
  "name": "@megalo/regular-loader",
  "version": "0.1.0",
  "keywords": [
    "regularjs",
    "regular",
    "rgl",
    "webpack",
    "loader"
  ],
  "description": "webpack loader for regularjs",
  "main": "lib/index.js",
  "scripts": {
    "test": "eslint lib --quiet && npm run ava",
    "ava": "ava __tests__/**/*.test.js",
    "snapshot": "rm -rf __tests__/__snapshots__ && npm run ava -- -u",
    "lint": "eslint lib --fix --quiet",
    "format": "prettier-eslint --list-different --write \"lib/**/*.js\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "mo",
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        2
      ]
    }
  },
  "maintainers": [
    {
      "name": "fengzilong",
      "email": "fengzilong1992@gmail.com"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@megalo/regular-template-compiler": "^0.1.0",
    "@vue/component-compiler-utils": "^2.3.0",
    "hash-sum": "^1.0.2",
    "html-minifier": "^3.5.6",
    "loader-utils": "^1.1.0",
    "lru-cache": "^4.0.1"
  },
  "peerDependencies": {
    "regularjs": "*"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^1.0.1",
    "eslint": "^3.15.0",
    "eslint-config-mo": "^0.2.0",
    "extract-text-webpack-plugin": "2.1.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "fs-extra": "^4.0.1",
    "html-webpack-plugin": "^3.2.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.0.4",
    "mini-css-extract-plugin": "^0.4.5",
    "prettier-eslint-cli": "^4.7.1",
    "regularjs": "0.6.0-beta.6",
    "rimraf": "^2.6.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  }
}
